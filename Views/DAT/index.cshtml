    <style>
        /* Smooth scrolling behavior */
        html {
            scroll-behavior: smooth;
        }

        /* Basic styling for sections */
        section {
            padding: 50px 20px;
            margin: 20px 0;
        }

        .cta {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

            .cta:hover {
                background-color: #218838;
            }

        .intro ul {
            list-style-type: none;
            padding-left: 0;
        }

        .intro li {
            margin: 10px 0;
        }

        .banner img {
            width: 100%;
            height: auto;
        }

        .section-title {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .section-content {
            font-size: 1rem;
            line-height: 1.6;
        }

        /* CSS cho các ảnh trong mục li */
        ul li img {
            width: 100px; /* hoặc chiều rộng mong muốn */
            height: 100px; /* hoặc chiều cao mong muốn */
            object-fit: cover; /* giúp ảnh không bị méo */
            margin-right: 20px; /* khoảng cách giữa ảnh và văn bản */
            border-radius: 50%; /* nếu bạn muốn ảnh hình tròn */
        }

        /* Căn chỉnh lại các mục li */
        ul li {
            display: flex;
            align-items: center; /* căn giữa ảnh và văn bản */
            margin: 20px 0;
        }

        /* Tăng khoảng cách giữa các li */
        #courses ul li {
            width: 45%; /* Thay vì 30% để tạo không gian rộng hơn */
            margin: 20px;
            padding: 15px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            display: flex;
            flex-direction: column;
        }

         /* Tăng khoảng cách giữa các phần tử bên trong li */
        #courses ul li h3 {
         font-size: 1.6rem;
         margin-bottom: 10px; /* Khoảng cách dưới tiêu đề */
        }

        #courses ul li p {
         font-size: 1rem;
         line-height: 1.5; /* Tăng khoảng cách dòng để văn bản không bị chật */
         margin-bottom: 10px;
        }

         /* Cải thiện cách hiển thị cho các đoạn văn và thông tin */
        #courses ul li strong {
         font-weight: bold;
         margin-right: 5px;
        }

        #courses ul li span {
         display: block; /* Đặt mỗi từ vào một dòng riêng */
         margin-bottom: 5px; /* Khoảng cách giữa các từ */
        }

        /* Căn giữa nút Đăng ký ngay */
        #courses .cta {
         display: block;
         margin: 20px auto; /* Căn giữa theo chiều ngang */
         text-align: center; /* Căn giữa chữ bên trong */
        }

        /* Cập nhật phần mẹo học tiếng Anh với hình ảnh */
        #tips ul {
            list-style-type: none;
            padding-left: 0;
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

            #tips ul li {
                margin: 20px;
                width: 45%;
                background-color: #f1f1f1;
                border-radius: 8px;
                overflow: hidden;
                display: flex;
                align-items: center;
                padding: 10px;
            }

                #tips ul li .tip-image {
                    width: 60px;
                    height: 60px;
                    margin-right: 15px;
                    border-radius: 50%;
                    object-fit: cover;
                }

                #tips ul li strong {
                    font-size: 1.1rem;
                    color: #28a745;
                }

        #tips .section-content p {
            text-align: center;
            font-size: 1rem;
            margin-bottom: 20px;
        }


        /* Container chứa các liên kết */
        .links-container {
            display: flex;
            flex-direction: column; /* Xếp các liên kết theo chiều dọc */
            gap: 20px; /* Khoảng cách giữa các liên kết */
            padding: 30px;
            background-color: #ffffff; /* Màu nền trắng cho container */
            border-radius: 12px; /* Bo góc mềm mại */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* Bóng đổ nhẹ tạo chiều sâu */
            max-width: 650px; /* Giới hạn độ rộng của container */
            margin: 30px auto; /* Căn giữa container */
            border: 1px solid #e0e0e0; /* Đường viền nhẹ bao quanh */
        }

            /* Phong cách cho các liên kết */
            .links-container a {
                text-decoration: none; /* Xóa gạch dưới */
                color: #007bff; /* Màu xanh dương cho liên kết */
                font-size: 1.2rem; /* Cỡ chữ dễ đọc và dễ nhìn */
                font-weight: 600; /* Đậm hơn một chút */
                line-height: 1.5; /* Tăng khoảng cách dòng để dễ đọc */
                padding: 12px 20px;
                border-radius: 6px; /* Bo góc nhẹ cho các liên kết */
                transition: all 0.3s ease; /* Tạo hiệu ứng chuyển động mượt mà */
                background-color: #f0f8ff; /* Nền nhẹ cho các liên kết */
                border: 2px solid transparent; /* Thêm border mờ cho các liên kết */
            }

                /* Hiệu ứng hover */
                .links-container a:hover {
                    color: #ffffff; /* Màu chữ trắng khi hover */
                    background-color: #007bff; /* Nền xanh dương khi hover */
                    border-color: #007bff; /* Viền xanh dương khi hover */
                    transform: translateY(-3px); /* Dịch chuyển nhẹ lên khi hover */
                }

                /* Hiệu ứng khi liên kết đang được chọn */
                .links-container a:focus {
                    outline: none; /* Xóa outline khi focus */
                    border-color: #0056b3; /* Thêm viền màu xanh đậm khi focus */
                    box-shadow: 0 0 8px rgba(0, 86, 179, 0.5); /* Hiệu ứng bóng khi focus */
                }

                .links-container .section-title {
                    font-size: 1.6rem; /* Cỡ chữ vừa phải */
                    font-weight: 700; /* Chữ đậm */
                    color: #333; /* Màu chữ đậm */
                    margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
                    border-bottom: 3px solid #28a745; /* Đường viền dưới màu xanh lá */
                    padding-bottom: 10px; /* Khoảng cách giữa chữ và đường viền */
                }

